generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Defines the User model
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  apps      Application[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Defines the Application model
model Application {
  id        Int      @id @default(autoincrement())
  company   String
  position  String
  status    Status   @default(APPLIED)
  notes     String?
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Defines the Role enum for user roles
enum Role {
  USER
  ADMIN
}

// Defines the Status enum for application statuses
enum Status {
  APPLIED
  INTERVIEWING
  OFFER
  REJECTED
}
